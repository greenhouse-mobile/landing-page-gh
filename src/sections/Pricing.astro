---
import {pricingStrings} from "../data/pricingStrings";
import type {Language} from "../models/Translatable";
import PricingCard from "../components/pricing/PricingCard.astro";

interface Props {
  id: string;
  language: Language;
}

const {id, language} = Astro.props;
const {title, subtitle, plans} = pricingStrings[language];
---

<section id={id} class="bg-light p-12 pt-32">
  <h2 class="text-5xl text-center font-bold">{title}</h2>
  <p class="text-xl text-center font-medium">{subtitle}</p>
  <div class="flex flex-col items-center gap-6 mt-6">
    {
      plans.map(plan => <PricingCard plan={plan} />)
    }
  </div>
</section>