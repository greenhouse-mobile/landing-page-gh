---
import type {Benefit} from "../../models/Benefit";

interface Props {
  feature: Benefit;
}

const {feature} = Astro.props;
---

<div class="flex flex-col justify-between items-center bg-light rounded-2xl drop-shadow-lg p-6">
  <h3 class="text-center text-2xl font-semibold">{feature.title}</h3>
  <img class="h-56 w-auto" src={feature.imageUrl} alt={`${feature.title} logo`}>
  <p class="text-center">{feature.description}</p>
</div>